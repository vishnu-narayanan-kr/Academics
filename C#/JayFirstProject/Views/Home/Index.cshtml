@{
    ViewData["Title"] = "Home Page";
}

@model List<JayFirstProject.Models.Student>

<a href="@Url.Action("StudentList", "Home")">StudentList</a>

<div class="text-center">
    <h1 class="display-4">Student</h1>

    <table border=1 class="table">
        <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Course</th>
        <th>Year</th>
        <th>Email</th>
        <th>Action</th>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.id</td>
                    <td>@student.name</td>
                    <td>@student.course</td>
                    <td>@student.year</td>
                    <td>@student.email</td>
                    <td>
                        <a href="/Edit?id=">Edit</a>
                        <a href="/Delete?id=">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
